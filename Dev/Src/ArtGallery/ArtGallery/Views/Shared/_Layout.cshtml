@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Art Browser</title>
    <!-- Basic page needs ================================================== -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="shortcut icon" href="#" type="image/png">
    <!-- Title and description ================================================== -->
    <title>Art Browser</title>
    <!-- Product meta ================================================== -->
    <!-- Helpers ================================================== -->
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="gray">
    <!-- CSS ================================================== -->
    <link href="~/Content/AG/timber.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Content/AG/theme.css" rel="stylesheet" type="text/css" media="all">
    <script src="~/Scripts/AG/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/AG/modernizr.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('ul.site-nav').children().each(function () {                
                if ($(this).attr('ID') == '@ViewBag.PageName') {
                    $(this).addClass('site-nav--active');
                }
            });
        });


    </script>

</head>
<body>
    <div id="container">

        @Html.Partial("_Header")

        <div id="body">
            @if (ViewBag.user == "admin")
            {
                <main class="wrapper main-content" role="main">
                    <div class="grid">
                        @Html.Partial("_SideNav_Admin")
                        @RenderBody()
                    </div>
                </main>
            }
            else if (ViewBag.user == "partner")
            {
                <main class="wrapper main-content" role="main">
                    <div class="grid">
                        @Html.Partial("_SideNav")
                        @RenderBody()
                    </div>
                </main>
            }
            else
            {
            <!-- BODY -->
                <div class="container body-content">
                    @RenderBody()
                </div>
            <!-- BODY -->
            }
        </div>
        @Html.Partial("_Footer")
    </div>

    <script src="~/Scripts/AG/jquery.flexslider.min.js" type="text/javascript"></script>
    <script src="~/Scripts/AG/slider.js" type="text/javascript"></script>

    <script src="~/Scripts/AG/fastclick.js" type="text/javascript"></script>
    <script src="~/Scripts/AG/timber.js" type="text/javascript"></script>
    <script src="~/Scripts/AG/theme.js" type="text/javascript"></script>
    <script src="~/Scripts/AG/handlebars.min.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
