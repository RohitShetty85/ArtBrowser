@using ArtGallery.Extensions;
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Art Browser</title>
    <!-- Basic page needs ================================================== -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!-- Title and description ================================================== -->
    <title>Art Browser</title>
    <!-- Product meta ================================================== -->
    <!-- Helpers ================================================== -->
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="gray">
    <!-- CSS ================================================== -->
    @Styles.Render("~/Content/agcss")
    <script src="~/Scripts/AG/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/AG/modernizr.min.js" type="text/javascript"></script>


</head>
<body>
    <div id="container">

        @Html.Partial("_Header")

        <div id="body">
            @if (ViewBag.user == "admin")
            {
                <main class="wrapper main-content" role="main">
                    <div class="grid">
                        @Html.Partial("_SideNav_Admin")
                    </div>
                </main>
            }
            else if (ViewBag.user == "partner")
            {
                <main class="wrapper main-content" role="main">
                    <div class="grid">
                        @Html.Partial("_SideNav")
                    </div>
                </main>
            }
            else
            {
            <!-- BODY -->
                <div class="container body-content">
                    @RenderBody()
                </div>
            <!-- BODY -->
            }
        </div>
        @Html.Partial("_Footer")
    </div>

    @Scripts.Render("~/bundles/ag")
    <script src="~/Scripts/AG/theme.js"></script>
    @Scripts.Render("~/bundles/ckeditor")
    <script type="text/javascript">
        $(document).ready(function () {

            $('ul.site-nav').children().each(function () {
                if ($(this).attr('ID') == '@ViewBag.PageName') {
                    $(this).addClass('site-nav--active');
                }
            });
        });


    </script>
    <script>
        !function (g, s, q, r, d) {
            r = g[r] = g[r] || function () {
                (r.q = r.q || []).push(
                arguments)
            }; d = s.createElement(q); q = s.getElementsByTagName(q)[0];
            d.src = '//d1l6p2sc9645hc.cloudfront.net/tracker.js'; q.parentNode.
            insertBefore(d, q)
        }(window, document, 'script', '_gs');

        _gs('GSN-605049-W');
    </script>

    @{
        if (User.Identity.IsAuthenticated)
        {
            <script>
                _gs('identify', {
                    id: '@User.Identity.GetUserId()',
                    name: '@User.Identity.GetDisplayName()',
                    email: '@User.Identity.GetUserName()',
                });
            </script>
        }
    }
    @RenderSection("scripts", required: false)
</body>
</html>
