@{
    ViewBag.Title = "Confirm Email";
}

<main class="wrapper main-content" role="main">
    <div class="grid">
        <div class="grid__item">
            <div class="grid-uniform grid-link__container12">
                <div class="grid__item large--one-full">
                    <div class="section-header section-header--large">
                        <center><h2 class="section-header__title--left section-header__title h4">Confirm Email</h2></center>
                    </div>
                    <div>
                        <p class="text-center">
                            Thank you for confirming your email. 
                            
                            @{ 
                                if(!User.Identity.IsAuthenticated)
                                {
                                    <span>Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</span>
                                }
                            }
                            
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
