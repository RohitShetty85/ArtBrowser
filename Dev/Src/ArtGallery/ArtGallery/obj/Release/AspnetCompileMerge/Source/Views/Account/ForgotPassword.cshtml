@model ArtGallery.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
<main class="wrapper main-content" role="main">
    <div class="grid">
        <div class="grid__item">
            <div class="grid-uniform grid-link__container">
                <!--<div class="grid__item large--one-fifth medium-down--hide">

                </div>-->
                <div class="grid__item large--one-full">
                    <div class="section-header section-header--large">
                        <h2 class="text-center section-header__title--left section-header__title h4">Forgot password?</h2>
                    </div>
                    <div class="text-center">
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4 class="text-center">Enter your email.</h4>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div  class="col-md-10"> 
                                @Html.TextBoxFor(m => m.Email)
                            </div>
                            <br/>
                            <input type="submit" class="btn" name="Submit" value="Email Link">
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
