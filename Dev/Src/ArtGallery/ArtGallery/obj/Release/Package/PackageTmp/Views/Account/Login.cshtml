@using ArtGallery.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main class="wrapper main-content" role="main">
    <div class="grid">
        <div class="grid__item">
            <div class="grid-uniform grid-link__container12">
                <div class="grid__item large--one-full">
                    <div class="section-header section-header--large">
                        <center><h2 class="section-header__title--left section-header__title h4">Log in</h2></center>
                    </div>
                    <ul style="list-style:square;padding-left:30px;">
                        <li>
                            If you are an ArtBrowser registered Artist or Art Institution/Gallery and wish create or update your profile please log in below
                        </li>
                        <li>
                            If you are an art lover and would like to be notified when ArtBrowser app is launched. Please register your interest by submitting your email in the relevant section on the bottom of the page
                        </li>
                        <li>
                            If you would like to promote your website or exhibition by featuring them on the ArtBrowser website please contact us
                        </li>
                    </ul>
                    
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "small--hide", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div>
                                @Html.LabelFor(m => m.Email)
                                <div>
                                    @Html.TextBoxFor(m => m.Email)
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                @Html.LabelFor(m => m.Password)
                                <div>
                                    @Html.PasswordFor(m => m.Password)
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <input type="submit" value="Sign in" class="btn" />
                            <a href="~/Account/ForgotPassword" style="float:right;">Forgot Password</a>
                            @* Enable this once you have account confirmation enabled for password reset functionality
                                    <p>
                                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                </p>*@
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
