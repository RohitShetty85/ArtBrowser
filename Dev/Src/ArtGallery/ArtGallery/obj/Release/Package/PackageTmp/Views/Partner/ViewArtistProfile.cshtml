@model ArtGallery.Data.DAL.Artist
@using ArtGallery.Models
@using ArtGallery.Common
@using System

<div class="grid__item large--four-fifths">
    <div class="section-header section-header--large">
        <h2 class="section-header__title--left section-header__title h4">
            Artist Profile
        </h2>
        <div class="section-header__link--right medium-down--hide">
            <a href="~/Partner/EditArtistProfile" title="Edit Profile">Edit Profile</a>
        </div>
    </div>
    <div class="grid-uniform grid-link__container">
        <style>
            td {
                border: 0px;
                padding: 0px;
                min-width: 150px;
            }

            th, td, tr {
                text-align: left;
                padding: 0px;
                border: 0px solid #f0f0f0;
            }
        </style>
        
        <div class="grid__item">
            <!----------------------------------------- start here content layout ------------------------------>
            <div class="cover">
                <img src="@Url.Content(Model.Cover_Pic)" height="250" width="750">
            </div>

            <div style="margin-top:-10px;display:table;">
                <div class="section-header__title--left section-header__title" style="width:130px;">
                    <div class="profile">
                        <img src='@Url.Content(Model.Profile_Pic)' style="width:130px;height:130px;margin-top:-35px;">
                        <!--<center style="margin:-10px;line-height:1"><b>Mrs. safrine</b><br/>admin@gmail.com<br/>26 years old</center>-->
                    </div>
                </div>
                <div class="section-header__title--right" style="float:left;text-align: left;padding:5px;">
                    <div><b>@Model.AspNetUser.Name</b></div>
                    <div><b>27, @Model.Location</b></div>
                </div>
            </div>

            <div class="section-header section-header--large" style="margin-bottom:10px">
                <h2 class="section-header__title--left section-header__title h4">
                    Profile Information
                </h2>
            </div>
            <table>
                <tr>
                    <td><b>Expertise</b></td>
                    <td>@Model.Expertise</td>
                </tr>
                <tr>
                    <td><b>Education</b></td>
                    <td>@Model.Education</td>
                </tr>
                <tr>
                    <td><b>Price Range</b></td>
                    <td>@Model.Price_Range</td>
                </tr>
                <tr>
                    <td><b>Work</b></td>
                    <td>@Model.Work</td>
                </tr>
                <tr>
                    <td><b>Phone No</b></td>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <td><b>Email</b></td>
                    <td>@Model.AspNetUser.Email</td>
                </tr>
                <tr>
                    <td valign="top"><b>Artist's Statement</b></td>
                    <td style="text-align:justify;text-justify:inter-word;line-height:1.3">@Model.Statement</td>
                </tr>
            </table>
            <div class="section-header section-header--large">
                <h2 class="section-header__title--left section-header__title h4">
                    Arts
                </h2>
                <div class="section-header__link--right medium-down--hide">
                    <a href="~/Arts/Index" title="Browse our Gallery3 collection">View all Items</a>
                </div>
            </div>
            
            <div class="grid-uniform grid-link__container">

                @{
                    if (Model.Arts.Count() > 0)
                    {
                        foreach (var art in Model.Arts)
                        {
                            <div class="grid__item medium-down--one-half large--one-quarter">
                                <a href="#" class="grid-link">
                                    <p class="grid-link__title">@art.Title</p>
                                    <span class="grid-link__image grid-link__image--product">
                                        <span class="grid-link__image-centered">
                                            <img src="@art.Cover_Pic_Path" alt="@art.Title">
                                        </span>
                                    </span>
                                    <p class="grid-link__meta">
                                        <strong>@art.Price</strong>
                                    </p>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div>No items to display</div>
                    }
                }
            </div>
            <small class="view-more">
                <a href="~/Arts/Index">View all Items</a>
            </small>

            <div class="section-header section-header--large">
                <h2 class="section-header__title--left section-header__title h4">
                    Exhibitions
                </h2>
                <div class="section-header__link--right medium-down--hide">
                    <a href="~/Exhibitions/Index">View all Items</a>
                </div>
            </div>
            <div>
                <div class="section-header__title--left section-header__title" style="width:38%">
                    <span class="grid-link__image-centered">
                        <img src="~/images/pic2.jpg" alt="Art 1" style="width:290px;height:200px;">
                    </span>
                </div>
                <div class="section-header__link--right" style="float:left;text-align: left;padding-left:5px;width:100%">
                    <p style="margin:0px;line-height:1.3"><b>Location:</b><a>Rijk Museum, Amsterdam</a></p>
                    <p style="margin:0px;line-height:1.3"><b>Dates:</b><a>18/01/15 - 19/03/15</a></p>
                    <p style="margin:0px;line-height:1.3;text-align:justify;text-justify:inter-word;"><b>Statement:</b>In this exhibition I worked with several other up and coming artists. We decided to work with the white cude surroundings by using bold colours to attaract the attention of the audience. The exhibition was advertised in servral local newspapers.
                </div>
            </div>
            <!----------->
        </div>
    </div>
</div>