@model ArtGallery.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutWithLeftNav.cshtml";
}
<style>
    ul {
        margin:0px;
    }
</style>
<div class="grid__item large--four-fifths">
    <div class="section-header section-header--large">
        <h2 class="section-header__title--left section-header__title h4">Change Password</h2>
    </div>
    <div class="grid-uniform grid-link__container">
        <div class="grid__item">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "small--hide", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.LabelFor(m => m.OldPassword)
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.OldPassword)
                </div>
                    @Html.LabelFor(m => m.NewPassword)
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.NewPassword)
                    </div>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword)
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-default" />
                    </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
